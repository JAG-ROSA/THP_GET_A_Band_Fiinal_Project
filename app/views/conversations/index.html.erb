<div class="row mt-5 pt-5">
  <div class="col-md-9">
    <ul id="conversations-list">
      <% @conversations.each do |conversation| %>
        <% if user_signed_in? %>
          <%= render 'conversation', conversation: conversation, user: current_user %>
        <% elsif artist_signed_in? %>
          <%= render 'conversation', conversation: conversation, user: current_artist %>
        <% end %>
      <% end %>
    </ul>
  </div>

  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">User list</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% if user_signed_in? %>
            <% @users.each do |user| %>
              <li><%= link_to user.artist.email, conversations_path(user_id: user.user_id, artist_id: user.artist_id), remote: true, method: :post %></li>
            <% end %>
          <% elsif artist_signed_in? %>
            <% @artists.each do |user| %>
              <li><%= link_to user.user.email, conversations_path(artist_id: user), remote: true, method: :post %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
