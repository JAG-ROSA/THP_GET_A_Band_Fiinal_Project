<div class="row mt-5 pt-5">
  <div class="col-md-3 text-center">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Vos contacts</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% if user_signed_in? %>
            <% @users.each do |user| %>
              <li><%= link_to user.artist.artist_name, conversations_path(user_id: user.user_id, artist_id: user.artist_id), remote: true, method: :post, class: "btn btn-secondary w-75 mb-2" %></li>
            <% end %>
          <% elsif artist_signed_in? %>
            <% @artists.each do |user| %>
              <li><%= link_to "#{user.user.first_name} #{user.user.last_name}", conversations_path(artist_id: user), remote: true, method: :post, class: "btn btn-secondary w-75 mb-2" %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="col-md-9">
    <h3 class="text-center">Mes conversations</h3>
    <p class="text-center">Appuyez sur un de vos contacts pour afficher la conversation</p>
    <ul id="conversations-list">
      <% @conversations.each do |conversation| %>
        <% if user_signed_in? %>
          <%= render 'conversation', conversation: conversation, user: current_user %>
        <% elsif artist_signed_in? %>
          <%= render 'conversation', conversation: conversation, user: current_artist %>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
