<li>
  <div class="panel panel-default" data-conversation-id="<%= conversation.id %>">
    <div class="panel-heading">
      <%= link_to conversation.opposed_user(user).email, '', class: 'toggle-window' %>
      <%= link_to "x", close_conversation_path(conversation), class: "btn btn-default btn-xs pull-right", remote: true, method: :post %>
    </div>

    <div class="panel-body" style="display: none;">
      <div class="messages-list">
        <ul>
          <%= render 'conversation_content', messages: conversation.messages, user: user %>
        </ul>
      </div>
      <%= form_for [conversation, conversation.messages.new], remote: true do |f| %>
        <% if user_signed_in? %>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.hidden_field :artist_id, value: conversation.recipient_id %>
        <% elsif artist_signed_in? %>
          <%= f.hidden_field :user_id, value: conversation.sender_id %>
          <%= f.hidden_field :artist_id, value: current_artist.id %>
        <% end %>
        <%= f.text_area :body, class: "form-control" %>
        <%= f.submit "Send", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</li>