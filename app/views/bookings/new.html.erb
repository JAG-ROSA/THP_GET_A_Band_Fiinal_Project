<div class="container pt-5 mt-5">
<h1 class="text-center">Mon calendrier</h1>
  <%= month_calendar events: @bookings do |date, bookings| %>  
    <%= date.strftime('%d/%m/%y') %>
    
    <% bookings.each do |booking| %>  
      <div>  
        <%= booking.user.first_name %>
        <%= booking.user.last_name %> 
      </div>  
    <% end %>  

  <% end %>
</div>