<div class="container pt-5 mt-5">
  <%= render "artists/shared/error_messages", resource: resource %>
  <h2 class="text-center">Modifier votre mot de passe</h2>

  <div class="col-lg-8 mx-auto">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <strong><%= f.label :password, "Nouveau mot de passe" %></strong>
        <% if @minimum_password_length %>
          <em class="text-secondary small">(<%= @minimum_password_length %> caract√®res minimum)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-100" %>
      </div>

      <div class="field mt-3">
        <strong><%= f.label :password_confirmation, "Confirmer le nouveau mot de passe" %></strong><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100" %>
      </div>

      <div class="actions">
        <%= f.submit "Changer mon mot de passe", class: "btn btn-block mt-3", style: "border-radius: 20px;
                                                                  border: 1px solid #FF4B2B;
                                                                  background-color: #FF4B2B;
                                                                  color: #FFFFFF;
                                                                  font-size: 12px;
                                                                  font-weight: bold;
                                                                  padding: 12px 45px;
                                                                  letter-spacing: 1px;
                                                                  text-transform: uppercase;
                                                                  transition: transform 80ms ease-in;" %>
      </div>
    <% end %>

    <%= render "artists/shared/links" %>
  </div>
</div>
