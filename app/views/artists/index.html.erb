<div class="container pt-5 mt-5" id="anchor">
  <div>
    <%= form_with url: artists_path, method: "get", local: true do |form| %>
      <%= form.label "Jour de l'évènement" %>
      <%= form.date_field :start_date, value: @start_at, class: "form-control", style: "display: inline" %>
      <%= form.submit "Rechercher les artistes disponibles", class: "form-control btn btn-secondary mt-1", style: "display: inline" %>
    <% end %>
  </div>

  <div class="d-flex flex-wrap justify-content-center">
    <div class="row justify-content-center">
      <% if @artists.any? %>
        <% @artists.each_with_index do |artist, index| %>
            <%= render "card", artist: artist %>
        <% end %>
      <% else %>
      <div class="text-center mt-3">
        <h3>Malheureusement, aucun de nos artistes n'est disponible pour cette date.</h3>
      </div>
      <% end %>
    </div>
  </div>
</div>
