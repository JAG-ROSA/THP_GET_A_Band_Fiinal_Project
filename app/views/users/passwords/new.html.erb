<%= render "users/shared/error_messages", resource: resource %>

<div class="container vertical-center mt-5" id="passwords">

  <div class="form-container sign-in-container mx-auto">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      
      <h2>Mot de passe oublié ?</h2>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: :email %>
      </div>

      <div class="actions">
        <%= f.submit "Envoyez moi les informations de récupération", style: "border-radius: 20px;
                                          border: 1px solid #161d6f;
                                          background-color: #161d6f;
                                          color: #FFFFFF;
                                          font-size: 12px;
                                          font-weight: bold;
                                          padding: 12px 45px;
                                          letter-spacing: 1px;
                                          text-transform: uppercase;
                                          transition: transform 80ms ease-in;" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>